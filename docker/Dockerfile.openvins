    echo "ðŸ” Verifying custom OpenCV installation..." && \
    python3 -c "import cv2; print(f'âœ… OpenCV {cv2.__version__} successfully installed from source')" && \
    (pkg-config --modversion opencv4 && echo "âœ… OpenCV pkg-config working") || echo "âš ï¸ OpenCV pkg-config not found (normal for custom builds)" && \
    python3 -c "import cv2; print('OpenCV build info:'); print(cv2.getBuildInformation())" | grep -E "(LAPACK|TBB|OpenMP|CUDA)" && \
